{
	"manifest_version": 2,
	"name": "AniList Plugin by Rayne",
	"description": "Adds a few additional features to AniList.",
	"version": "1.0.0",
	"minimum_chrome_version": "60.0.3112",

	"icons": {
		"128": "icon128.png"
	},

	"permissions": [
		"https://graphql.anilist.co/*",
        "https://anilist.co/graphql",
        "webRequest",
        "webRequestBlocking"
	],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

	"content_scripts": [
		{
			"matches": [ "https://anilist.co/*" ],
			"js": [ "polyfill.js", "functionalities.js" ]
		}
	]
}